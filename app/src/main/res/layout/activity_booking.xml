<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".booking">

    <TextView
        android:id="@+id/timer_1"
        android:layout_width="123dp"
        android:layout_height="111dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="44dp"
        android:autofillHints="Select Begining"
        android:drawableTop="@drawable/ic_timer"
        android:drawablePadding="16dp"
        android:gravity="center"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/TVending"
        app:layout_constraintEnd_toEndOf="@+id/timer_2" />

    <TextView
        android:id="@+id/timer_2"
        android:layout_width="128dp"
        android:layout_height="100dp"
        android:layout_marginStart="132dp"
        android:layout_marginLeft="132dp"
        android:layout_marginBottom="24dp"
        android:autofillHints="Select Ending"
        android:drawableTop="@drawable/ic_timer"
        android:drawablePadding="16dp"
        android:gravity="center"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/TVbeginning"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65" />

    <Button
        android:id="@+id/getButton"
        android:layout_width="120dp"
        android:layout_height="67dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="112dp"
        android:background="@color/cardview_dark_background"
        android:text="Book"
        android:textColor="#C8C8ED"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/timer_1" />

    <TextView
        android:id="@+id/TVbeginning"
        android:layout_width="111dp"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="28dp"
        android:text="Begin"
        android:textColor="#E2EFE1"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/timer_1"
        app:layout_constraintStart_toStartOf="@+id/timer_2" />

    <TextView
        android:id="@+id/TVending"
        android:layout_width="101dp"
        android:layout_height="52dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="44dp"
        android:text="Ending"
        android:textColor="#E2EFE1"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/getButton"
        app:layout_constraintStart_toStartOf="@+id/timer_1" />
</androidx.constraintlayout.widget.ConstraintLayout>